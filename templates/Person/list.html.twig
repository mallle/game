{% extends 'base.html.twig' %}

{% block headline  %}Persons
{% endblock %}

{% block linksTop  %}
	<a href="{{ path('app_persons_new')}}" class="btn btn-sm btn-outline-secondary">New</a>
{% endblock %}


{% block body %}
	<div class="table-responsive">
		<table class="table table-striped table-sm">
			<thead>
				<tr>
					<th>#</th>
					<th>Name</th>
					<th>Gender</th>
					<th>img</th>
					<th>Age</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for person in persons %}
					<tr>
						<td>{{ person.id }}</td>
						<td>{{ person.name }}</td>
						<td>{{ person.gender }}</td>
						<td><img class="rounded-circle" src="{{ person.img }}"/></td>
						<td>{{ person.age }}</td>
						<td>
							<a href="{{ path('app_persons_edit', { person: person.id })}}" class="btn btn-sm btn-outline-secondary">Edit</a>
							<a href="{{ path('app_persons_delete', { person: person.id })}}" class="btn btn-sm btn-outline-secondary">Delete</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
